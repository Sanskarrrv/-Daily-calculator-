<body>

<div class="container">
    <h2>Dukan Daily Register</h2>
    <div class="date" id="todayDate"></div>

    <div class="main-balance">
        <div>Aaj ka Galla (Cash)</div>
        <span id="cashInHand">â‚¹0</span>
    </div>

    <div class="dashboard">
        <div class="box">
            <h3>Aamdani (+)</h3>
            <p class="green" id="totalIn">â‚¹0</p>
        </div>
        <div class="box">
            <h3>Kharcha (-)</h3>
            <p class="red" id="totalOut">â‚¹0</p>
        </div>
    </div>

    <div style="background:#f9f9f9; padding:10px; border-radius:8px;">
        <input type="number" id="amount" placeholder="Kitne Rupaye? (e.g. 100)">
        <input type="text" id="desc" placeholder="Kis cheez ke? (e.g. Xerox, Chai)">
        
        <div class="btn-group">
            <button class="btn-option income-btn active" id="btnIncome" onclick="setType('income')">Aamdani (Income)</button>
            <button class="btn-option expense-btn" id="btnExpense" onclick="setType('expense')">Kharcha (Expense)</button>
        </div>

        <button class="submit-btn" onclick="addEntry()">Entry Save Karein</button>
    </div>

    <h3>Aaj ki Entries</h3>
    <ul id="list">
        </ul>

    <button class="download-btn" onclick="downloadExcel()">ðŸ“¥ Download Daily Report</button>
</div>

<script>
    // Variables
    let currentType = 'income';
    let transactions = JSON.parse(localStorage.getItem('dukanHisab')) || [];
    
    // UI Elements
    const amountInput = document.getElementById('amount');
    const descInput = document.getElementById('desc');
    const btnIncome = document.getElementById('btnIncome');
    const btnExpense = document.getElementById('btnExpense');
    const list = document.getElementById('list');
    const cashDisplay = document.getElementById('cashInHand');
    const inDisplay = document.getElementById('totalIn');
    const outDisplay = document.getElementById('totalOut');

    // Date Set Karna
    document.getElementById('todayDate').innerText = new Date().toLocaleDateString('en-IN', { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' });

    // Button Toggle Function
    function setType(type) {
        currentType = type;
        if(type === 'income') {
            btnIncome.classList.add('active');
            btnIncome.style.opacity = "1";
            btnExpense.classList.remove('active');
            btnExpense.style.opacity = "0.5";
        } else {
            btnExpense.classList.add('active');
            btnExpense.style.opacity = "1";
            btnIncome.classList.remove('active');
            btnIncome.style.opacity = "0.5";
        }
    }

    // Nayi Entry Add Karna
    function addEntry() {
        if(amountInput.value === '') {
            alert("Bhaiya, amount toh likhiye!");
            return;
        }

        const transaction = {
            id: Date.now(),
            desc: descInput.value || (currentType === 'income' ? 'Sale' : 'Expense'), // Agar kuch na likha ho
            amount: +amountInput.value,
            type: currentType,
            time: new Date().toLocaleTimeString('en-US', { hour: 'numeric', minute: 'numeric', hour12: true })
        };

        transactions.push(transaction);
        saveData();
        updateUI();

        // Clear Form
        amountInput.value = '';
        descInput.value = '';
        amountInput.focus();
    }

    // Delete Function
    function removeEntry(id) {
        if(confirm("Ye hisab delete kar doon?")) {
            transactions = transactions.filter(t => t.id !== id);
            saveData();
            updateUI();
        }
    }

    // Screen Update Karna
    function updateUI() {
        list.innerHTML = '';
        let totalInc = 0;
        let totalExp = 0;

        // Ulti loop taaki nayi entry upar dikhe
        transactions.slice().reverse().forEach(t => {
            if(t.type === 'income') totalInc += t.amount;
            else totalExp += t.amount;

            const li = document.createElement('li');
            li.classList.add(t.type === 'income' ? 'inc' : 'exp');
            li.innerHTML = `
                <div>
                    <strong>${t.desc}</strong> <br>
                    <small style="color:gray">${t.time}</small>
                </div>
                <div style="display:flex; align-items:center;">
                    <span style="font-weight:bold; color:${t.type === 'income' ? '#27ae60' : '#c0392b'}">
                        ${t.type === 'income' ? '+' : '-'}â‚¹${t.amount}
                    </span>
                    <button class="del-btn" onclick="removeEntry(${t.id})">Ã—</button>
                </div>
            `;
            list.appendChild(li);
        });

        // Totals Update
        inDisplay.innerText = `â‚¹${totalInc}`;
        outDisplay.innerText = `â‚¹${totalExp}`;
        cashDisplay.innerText = `â‚¹${totalInc - totalExp}`;
    }

    // Save to LocalStorage
    function saveData() {
        localStorage.setItem('dukanHisab', JSON.stringify(transactions));
    }
    
    // Excel Download
    function downloadExcel() {
        let csv = "Time,Vivaran,Amount,Type\n";
        transactions.forEach(t => {
            csv += `${t.time},${t.desc},${t.amount},${t.type}\n`;
        });
        
        const link = document.createElement("a");
        link.href = "data:text/csv;charset=utf-8," + encodeURI(csv);
        link.download = "Dukan_Hisab_" + new Date().toLocaleDateString() + ".csv";
        document.body.appendChild(link);
        link.click();
    }

    // Start
    updateUI();
</script>

</body>
</html>
