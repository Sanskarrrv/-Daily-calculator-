        /* Upar ka Dashboard (Hisab Box) */
        .dashboard {
            display: flex;
            justify-content: space-between;
            margin-bottom: 20px;
            text-align: center;
            background: #eee;
            border-radius: 8px;
            padding: 10px;
        }
        .box { flex: 1; }
        .box h3 { margin: 0; font-size: 0.8em; color: #555; }
